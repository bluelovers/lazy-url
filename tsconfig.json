{
  "extends": "@bluelovers/tsconfig/esm/mapfile",
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": false
  },
  "include": [
    "./lib/**/*.ts"
  ],
  "exclude": [
    "**/*.d.ts",
    "**/tests/**",
    "**/esm/**"
  ]
}
